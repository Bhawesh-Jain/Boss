<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.fragment.TrendsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/banner_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_300sdpq"
                android:layout_height="@dimen/_200sdpq"
                app:cardCornerRadius="@dimen/_10sdpq"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ganeshji3" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_300sdpq"
                android:layout_height="@dimen/_200sdpq"
                app:cardCornerRadius="@dimen/_10sdpq"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ganeshji3" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_300sdpq"
                android:layout_height="@dimen/_200sdpq"
                app:cardCornerRadius="@dimen/_10sdpq"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ganeshji3" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_100sdpq"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdpq"
                android:layout_marginTop="@dimen/_12sdpq"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="@dimen/_80sdpq"
                    android:layout_height="@dimen/_80sdpq"
                    android:layout_gravity="center"
                    android:background="@drawable/cirbackground"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_50sdpq"
                        android:layout_height="@dimen/_50sdpq"
                        android:layout_gravity="center"
                        android:src="@drawable/music"
                        app:civ_border_color="@color/grey_400" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anju Gupta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdpq" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdpq"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdpq"
                android:layout_marginTop="@dimen/_12sdpq"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/_80sdpq"
                    android:layout_height="@dimen/_80sdpq"
                    android:layout_gravity="center"
                    android:background="@drawable/cirbackground"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_50sdpq"
                        android:layout_height="@dimen/_50sdpq"
                        android:layout_gravity="center"
                        android:src="@drawable/music"
                        app:civ_border_color="@color/grey_400" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anju Gupta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdpq" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdpq"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdpq"
                android:layout_marginTop="@dimen/_12sdpq"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/_80sdpq"
                    android:layout_height="@dimen/_80sdpq"
                    android:layout_gravity="center"
                    android:background="@drawable/cirbackground"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_50sdpq"
                        android:layout_height="@dimen/_50sdpq"
                        android:layout_gravity="center"
                        android:src="@drawable/music"
                        app:civ_border_color="@color/grey_400" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anju Gupta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdpq" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdpq"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdpq"
                android:layout_marginTop="@dimen/_12sdpq"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/_80sdpq"
                    android:layout_height="@dimen/_80sdpq"
                    android:layout_gravity="center"
                    android:background="@drawable/cirbackground"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_50sdpq"
                        android:layout_height="@dimen/_50sdpq"
                        android:layout_gravity="center"
                        android:src="@drawable/music"
                        app:civ_border_color="@color/grey_400" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Anju Gupta"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdpq" />


            </LinearLayout>


        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>