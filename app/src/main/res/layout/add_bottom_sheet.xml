<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="@dimen/_30sdpq">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Create"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdpq" />



    <LinearLayout
        android:layout_marginTop="@dimen/_10sdpq"
        android:id="@+id/list_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cardView"
            android:layout_width="@dimen/_50sdpq"
            android:layout_height="@dimen/_50sdpq"
            android:background="@drawable/graycircle"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="create_a_project"
                android:layout_margin="@dimen/_15sdpq"
                android:src="@drawable/ic_youtube_svgrepo" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Create a Short"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdpq" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdpq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cardView1"
            android:layout_width="@dimen/_50sdpq"
            android:layout_height="@dimen/_50sdpq"
            android:background="@drawable/graycircle"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="create_a_project"
                android:layout_margin="@dimen/_18sdpq"
                android:src="@drawable/ic_upload_svgrepo" />

        </LinearLayout>




        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Upload a video"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdpq" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdpq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout

            android:id="@+id/cardView2"
            android:layout_width="@dimen/_50sdpq"
            android:layout_height="@dimen/_50sdpq"
           android:background="@drawable/graycircle"
            app:cardCornerRadius="@dimen/_40sdpq"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="create_a_project"
                android:layout_margin="@dimen/_15sdpq"
                android:src="@drawable/ic_stream_svgrepo" />

        </LinearLayout>




        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/create_project_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Go live"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdpq" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>