<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.fragment.NotificationsFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_horizontal"
            android:text="@string/notification"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdpq" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:paddingLeft="@dimen/_10sdpq"
            android:paddingRight="@dimen/_10sdpq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.skydoves.elasticviews.ElasticCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_10sdpq">

                    <LinearLayout
                        android:id="@+id/products"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_50sdpq"
                                android:layout_height="@dimen/_50sdpq"
                                android:src="@drawable/woman"/>


                            <LinearLayout
                                android:layout_marginLeft="@dimen/_10sdpq"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto_regular"

                                android:text="Anju Gupta"
                                android:textColor="@color/black"
                                android:textFontWeight="500"
                                android:textSize="@dimen/_16sdpq" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingTop="@dimen/_5sdpq"
                                    android:textFontWeight="400"
                                    android:paddingRight="@dimen/_5sdpq"
                                    android:paddingBottom="@dimen/_5sdpq"
                                    android:text="1 hr"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_14sdpq" />


                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdpq"
                            android:id="@+id/AG_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_180sdpq"
                                    android:scaleType="center"
                                    android:src="@drawable/bar"
                                    app:cardCornerRadius="@dimen/_10sdpq">


                                </com.makeramen.roundedimageview.RoundedImageView>

                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdpq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_marginTop="@dimen/_7sdpq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/placename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=" How to become a cricketer and make it your career in India"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_16sdpq" />

                            </RelativeLayout>


                        </LinearLayout>



                    </LinearLayout>
                </com.skydoves.elasticviews.ElasticCardView>
                <com.skydoves.elasticviews.ElasticCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_10sdpq">

                    <LinearLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_50sdpq"
                                android:layout_height="@dimen/_50sdpq"
                                android:src="@drawable/woman"/>


                            <LinearLayout
                                android:layout_marginLeft="@dimen/_10sdpq"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"

                                    android:text="Anju Gupta"
                                    android:textColor="@color/black"
                                    android:textFontWeight="500"
                                    android:textSize="@dimen/_16sdpq" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingTop="@dimen/_5sdpq"
                                    android:textFontWeight="400"
                                    android:paddingRight="@dimen/_5sdpq"
                                    android:paddingBottom="@dimen/_5sdpq"
                                    android:text="1 hr"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_14sdpq" />


                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdpq"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_180sdpq"
                                    android:scaleType="center"
                                    android:src="@drawable/bar"
                                    app:cardCornerRadius="@dimen/_10sdpq">


                                </com.makeramen.roundedimageview.RoundedImageView>

                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdpq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_marginTop="@dimen/_7sdpq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=" How to become a crickete"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_16sdpq" />

                            </RelativeLayout>


                        </LinearLayout>



                    </LinearLayout>
                </com.skydoves.elasticviews.ElasticCardView>
                <com.skydoves.elasticviews.ElasticCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_10sdpq">

                    <LinearLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="@dimen/_50sdpq"
                                android:layout_height="@dimen/_50sdpq"
                                android:src="@drawable/woman"/>


                            <LinearLayout
                                android:layout_marginLeft="@dimen/_10sdpq"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_regular"

                                    android:text="Anju Gupta"
                                    android:textColor="@color/black"
                                    android:textFontWeight="500"
                                    android:textSize="@dimen/_16sdpq" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:paddingTop="@dimen/_5sdpq"
                                    android:textFontWeight="400"
                                    android:paddingRight="@dimen/_5sdpq"
                                    android:paddingBottom="@dimen/_5sdpq"
                                    android:text="1 hr"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/_14sdpq" />


                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdpq"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_180sdpq"
                                    android:scaleType="center"
                                    android:src="@drawable/bar"
                                    app:cardCornerRadius="@dimen/_10sdpq">


                                </com.makeramen.roundedimageview.RoundedImageView>

                            </RelativeLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdpq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_marginTop="@dimen/_7sdpq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Detroit:"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_16sdpq" />

                            </RelativeLayout>


                        </LinearLayout>



                    </LinearLayout>
                </com.skydoves.elasticviews.ElasticCardView>


            </LinearLayout>





            <TextView
                android:layout_margin="@dimen/_10sdpq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="2"
                android:text="Suggestion"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="@dimen/_18sdpq" />




            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_10sdpq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvNotification"
                />




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>

